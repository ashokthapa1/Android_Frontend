<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".delete">


    <ImageView
        android:id="@+id/ai"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/classic"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/txtHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Hospital"
        android:fontFamily="cursive"
        android:textSize="30sp"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#4B000000"
        android:gravity="center" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_below="@+id/txtHead"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="40dp"
        android:background="#5E000000"
        android:src="@drawable/delete"
        />

    <EditText
        android:id="@+id/etDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#72000000"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_marginTop="200dp"
        android:layout_below="@+id/txtHead"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Hospital ID.........." />

    <Button
        android:id="@+id/btnDdelete"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="#5E000000"
        android:text="Delete"
        android:layout_below="@+id/etDelete"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="70dp"
        android:textColor="#fff"/>



    <Button
        android:id="@+id/btnDback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4B000000"
        android:text=" Back !! "
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"/>




</RelativeLayout>