<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/hi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/classic"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/txtHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hospital Search System"
        android:fontFamily="cursive"
        android:textSize="30sp"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#4B000000"
        android:gravity="center" />

    <TextView
        android:id="@+id/eSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Search:"
        android:layout_marginTop="80dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:padding="20dp"
        android:background="#4B000000"
        android:fontFamily="fantasy"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/txtHead"/>

    <ImageView
        android:id="@+id/sImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/eSearch"
        android:layout_below="@+id/txtHead"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/search" />

    <Spinner
        android:id="@+id/emergencySearchType"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/eSearch"
        android:layout_marginStart="95dp"
        android:layout_marginTop="70dp"
        android:background="#858181"
        android:entries="@array/search_arrays"
        android:hint="@string/search_prompt"
        android:spinnerMode="dialog">

    </Spinner>

    <EditText
        android:id="@+id/emergencySearchKeyword"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_below="@+id/emergencySearchType"
        android:background="#858181"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="51dp"/>

    <Button
        android:id="@+id/btnEsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emergencySearchKeyword"
        android:layout_centerInParent="true"
        android:background="#4B000000"
        android:textColor="#fff"
        android:textSize="17sp"
        android:padding="22dp"
        android:layout_marginTop="50dp"
        android:text="Search"/>

    <Button
        android:id="@+id/btnBeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4B000000"
        android:text=" Be a Member !! "
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"/>


</RelativeLayout>