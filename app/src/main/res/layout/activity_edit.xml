<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".edit">

    <ImageView
        android:id="@+id/ai"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/classic"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/txtHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Hospital"
        android:fontFamily="cursive"
        android:textSize="30sp"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#4B000000"
        android:gravity="center" />

    <ImageView
        android:id="@+id/add"
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:layout_below="@+id/txtHead"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="5dp"
        android:background="#5E000000"
        android:src="@drawable/edit"
        />

    <EditText
        android:id="@+id/uId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#72000000"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/add"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Hospital ID.........." />

    <Spinner
        android:id="@+id/updateType"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/uId"
        android:layout_marginStart="95dp"
        android:layout_marginTop="40dp"
        android:background="#858181"
        android:entries="@array/edit_arrays"
        android:spinnerMode="dialog"/>


    <EditText
        android:id="@+id/updateValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#72000000"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_below="@+id/updateType"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:hint="Update Value...." />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="#5E000000"
        android:text="Update"
        android:layout_below="@+id/updateValue"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="70dp"
        android:textColor="#fff"/>





    <Button
        android:id="@+id/btnUback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4B000000"
        android:text=" Back !! "
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"/>

</RelativeLayout>